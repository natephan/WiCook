<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login" android:background="#FFA700">
    <TextView
            android:text="Change Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.095" app:layout_constraintVertical_bias="0.777"
            android:textColor="#C93737"/>
    <TextView
            android:text="Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.066" app:layout_constraintVertical_bias="1.0"
            android:textColor="#C93737" app:layout_constraintBottom_toTopOf="@+id/textView7"
            android:layout_marginBottom="25dp"/>
    <TextView
            android:text="Change Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.07" app:layout_constraintVertical_bias="1.0"
            android:textColor="#C93737" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@+id/textView9"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/userpic" android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textSize="46sp" android:textColor="#C93737"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.361"/>
    <TextView
            android:text="Dark Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="30sp"
            app:layout_constraintHorizontal_bias="0.06" android:textColor="#C93737"
            app:layout_constraintBottom_toTopOf="@+id/textView6" app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="25dp"/>
    <Button
            android:text="Delete Account"
            android:layout_width="200dp"
            android:layout_height="54dp" android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.928" android:background="#FF0000" android:textSize="20sp"
            app:backgroundTint="#FF0000"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch1"
            android:textOn="On" android:textOff="Off"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.845" app:layout_constraintVertical_bias="0.604"
            app:layout_constraintStart_toStartOf="parent"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/switch2"
            android:textOn="On" android:textOff="Off"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.845" app:layout_constraintVertical_bias="0.539"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>